header
	position fixed
	width 100%
	height 55px
	background-color black
	.main-nav
		display flex
		justify-content flex-end
		.ico-burger-open
			display block
			width 30px
			height auto
			padding 1rem
		.translate
			position absolute
			top 0
			width 100%
			height 100vh
			background-color black
			background-image url("../img/header-bg.png")
			transition right .5s ease
			.ico-burger-close
				display block
				padding .6rem
			li
				list-style-type none
				a
					text-decoration none
					color white
					text-transform uppercase
					display block
					text-align center
					font-size 1rem
					line-height 3rem
			&.close
				right -101%
			&.open
				right 0