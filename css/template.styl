*
	margin 0
	padding 0
	
body
	font-size 16px
	font-family sans-serif

main
	padding-top 55px
	
section 
	h1
		background-image url("../img/header-bg.png")
		img
			width 100%
			height auto
	h2
		font-size 1.2rem
		text-align center
		padding 1rem
	p
		padding 1rem
		text-align center
		line-height 1.3rem
	.ps4
		display none
	.para-align-left
		text-align left
		picture
			display block
			text-align center
		
	ul 
		display none

.img-division
	width 100%
	height auto

.division
	position relative
	height 250px
	.storm
		position absolute
		right 0
		overflow hidden
		z-index -10